        <addForeignKeyConstraint baseColumnNames="visitor_team_id"
                                 baseTableName="game"
                                 constraintName="fk_game_visitor_team_id"
                                 referencedColumnNames="id"
                                 referencedTableName="team"/>

    </changeSet>
</databaseChangeLog>
